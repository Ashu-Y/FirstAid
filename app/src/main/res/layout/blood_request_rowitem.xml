<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_bloodGroup"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/animal_bite"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/label_name"
                android:layout_toRightOf="@+id/icon_bloodGroup"
                android:text="Name"
                android:textColor="#9E9E9E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name"
                android:layout_toRightOf="@+id/icon_bloodGroup"
                android:text="Robin"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_date"
                android:layout_toRightOf="@+id/icon_bloodGroup"
                android:layout_below="@+id/name"
                android:text="Date"
                android:textColor="#9E9E9E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:layout_toRightOf="@+id/icon_bloodGroup"
                android:text="24th May, 2017"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_status"
                android:layout_alignParentRight="true"
                android:text="Status"
                android:textColor="#9E9E9E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/status"
                android:text="Pending"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_below="@+id/label_status"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_time"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/name"
                android:text="Time"
                android:textColor="#9E9E9E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="08:30 PM"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/label_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>