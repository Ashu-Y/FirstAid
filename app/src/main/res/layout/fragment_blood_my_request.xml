<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.practice.android.firstaid.Fragments.BloodMyRequest">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/noReqImg"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/blood_request_empty"/>

    <TextView
        android:id="@+id/noReqTV"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9E9E9E"
        android:layout_marginBottom="4dp"
        android:text="There is no new request"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_myBR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:text="Tap "
            android:textColor="#9E9E9E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/openForm"
            android:text="here"
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text=" to create your request"
            android:textColor="#9E9E9E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
