<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/row_itemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:src="@drawable/circle_stroke" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon_bloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:src="@color/colorAccent" />

                <TextView
                    android:id="@+id/fa_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="O+"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </FrameLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="16dp">


                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_name"
                    android:layout_marginTop="2dp"
                    android:text="Robin"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="8dp"
                    android:text="Date"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_date"
                    android:layout_marginTop="2dp"
                    android:text="24th May, 2017"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:id="@+id/label_status"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:text="Status"-->
                <!--android:textColor="#9E9E9E" />-->

                <!--<TextView-->
                <!--android:id="@+id/status"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_below="@+id/label_status"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:text="Pending"-->
                <!--android:textColor="@color/colorAccent"-->
                <!--android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/label_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="8dp"
                    android:text="Time"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/label_time"
                    android:layout_marginTop="2dp"
                    android:text="08:30 PM"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/select_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingTop="8dp"
                        android:text="Call: "
                        android:textColor="#9E9E9E" />

                    <!--<TextView-->
                        <!--android:id="@+id/accept"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:paddingTop="8dp"-->
                        <!--android:text="Accept"-->
                        <!--android:textColor="#2e7d32" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/reject"-->
                        <!--android:gravity="right"-->
                        <!--android:layout_gravity="right"-->
                        <!--android:layout_marginLeft="6dp"-->
                        <!--android:paddingTop="8dp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Reject"-->
                        <!--android:textColor="#d50000" />-->


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>